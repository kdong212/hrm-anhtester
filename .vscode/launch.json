{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug test_warehouse.py (pytest)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_dropdown_basic.py",

                "-s",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
